<%- include('../templates/layout-start', {title: title}) %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-6">
        
        <form method="POST" class="mt-5">
            <div class="form-group">
                <label for="usernameTitle">Имя</label>
                <input type="text"
                       name="username"
                       class="form-control"
                       id="usernameTitle">
            </div>
            <div class="form-group">
                <label for="passTitle">Пароль</label>
                <input type="password"
                       name="password"
                       class="form-control"
                       id="passTitle">
            </div>
            <div class="form-group">
                <label for="nickTitle">Никнейм</label>
                <input type="text"
                       name="displayName"
                       class="form-control"
                       id="nickTitle">
            </div>
            <div class="form-group">
                <label for="emailTitle">Email</label>
                <input type="email"
                       name="email"
                       class="form-control"
                       id="emailTitle">
            </div>

            <div class="form-group text-right ">
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </div>
        </form>

    </div>
</div>

<%- include('../templates/layout-end') %>